/*Media Querys*/					

@media screen and (max-width 1024px)
	.cuadro img
		display none
@media screen and (max-width 800px)		
	body > figure
		margin 0
		width 100%
		text-align center
		img
			max-width 400px
			width 60%
	.blanco-on
		opacity 1
	.container.prin
		flex-direction column
		justify-content flex-end
		width 100%	
		.naranja, .blanco	
			width 100%
			height 40%
			.cuadro
				border none
				position static
				img
					display block
					right 20px
				&::before
					content ''
					display none
				.info h2
					display none	
			.colegio img
				position absolute
				left 10%
				z-index 1110
		.blanco
			overflow visible
			.cuadro img
				left 20px
			.colegio img 
				left initial
				right 8%
			&:hover ~ .naranja
				opacity 1		